{
  "name": "legends_of_runeterra_twitch_win_tracker",
  "version": "0.1.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "client": "cd client && npm start",
    "client-prod": "cd client && npm run start-prod",
    "client-test": "cd client && npm test",
    "electron": "cd server && npm run electron",
    "server": "cd server && npm start",
    "server-prod": "cd server && npm run start-prod",
    "start-with-electron": "concurrently \"npm run client\" \"npm run electron\" ",
    "start": "concurrently \"npm run client\" \"npm run server\" ",
    "start-prod": "concurrently \"npm run client-prod\" \"npm run server-prod\" ",
    "postinstall": "(npm run install-client); (npm run install-server); (npm run install-history-lambda);",
    "install-client": "cd client && npm install",
    "install-server": "cd server && npm install",
    "install-history-lambda": "cd server/aws-lambda/getLoRHistoryByChannelId && npm install"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run client-test"
    }
  },
  "devDependencies": {
    "concurrently": "^5.1.0",
    "husky": "^4.2.5"
  },
  "dependencies": {}
}
